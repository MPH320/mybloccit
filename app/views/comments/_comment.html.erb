<%= content_tag :div, class: 'media', id: "comment-#{comment.id}" do %>
   <div class="media-body">
     <p><%= comment.body %></p>
     <small class="comment">
       Commented by <%= comment.user.name %>  <%= time_ago_in_words(comment.created_at) %> ago
       <% if  comment.post.present? %>
            <% if user_is_authorized_for_comment?(comment) %>
             | <%= link_to "Delete", [comment.post, comment], method: :delete %>
            <% end %>
        <% else %>
            <% if user_is_authorized_for_comment?(comment) %>
            | <%= link_to "Delete", [comment.sponsored_post, comment], method: :delete %>
            <% end %>
        <% end %>
     </small>
   </div>
<% end %>
