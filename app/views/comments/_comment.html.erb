<div class="media">
   <div class="media-body">
     <p><%= comment.body %></p>
     <small class="comment">
       Commented by <%= comment.user.name %>  <%= time_ago_in_words(comment.created_at) %> ago
       <% if user_is_authorized_for_comment?(comment) %>
         | <%= link_to "Delete", [@post, comment], method: :delete %>
       <% end %>
     </small>
   </div>
 </div>