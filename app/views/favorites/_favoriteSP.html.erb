<% if favorite = current_user.favorite_forSP(sponsored_post) %>

   <%= link_to [sponsored_post, favorite], class: 'btn btn-danger', method: :delete do %>
     <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Unfavorite
   <% end %>
 <% else %>

   <%= link_to [sponsored_post, Favorite.new], class: 'btn btn-primary', method: :sponsored_post do %>
     <i class="glyphicon glyphicon-star"> </i>&nbsp; Favorite
   <% end %>
 <% end %>